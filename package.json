{
  "name": "@liftoff/cursor-ops",
  "version": "1.0.0",
  "description": "CLI to enforce Cursor IDE rules, CI, and hooks across repositories",
  "bin": {
    "cursor-ops": "bin/cli.js"
  },
  "scripts": {
    "postinstall": "node lib/init.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "keywords": ["cursor", "liftoff", "cli", "ai", "devops", "frontend", "infra"],
  "author": "LiftOff",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^11.2.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liftoffllc/cursor-ops-kit.git"
  },
  "bugs": {
    "url": "https://github.com/liftoffllc/cursor-ops-kit/issues"
  },
  "homepage": "https://github.com/liftoffllc/cursor-ops-kit#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "bin/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --findRelatedTests"
    ]
  },
  "config": {
    "version": "1.0.0"
  }
}