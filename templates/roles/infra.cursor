{
  "version": "1.0.0",
  "aiPermissions": {
    "infra": {
      "allowInfrastructureEdits": true,
      "suggestScalabilityImprovements": true,
      "enforceSecurityStandards": true,
      "suggestCostOptimizations": true,
      "enforceReliabilityPatterns": true
    }
  },
  "documentation": {
    "autoGenerateDocstrings": true,
    "generateREADMEs": true,
    "requireArchitectureDiagrams": true,
    "enforceRunbooks": true,
    "requireDisasterRecoveryDocs": true
  },
  "testing": {
    "suggestTests": true,
    "requireInfraTests": true,
    "enforceTestCoverage": true,
    "minCoverage": 80,
    "requireLoadTests": true,
    "requireFailoverTests": true
  },
  "workflow": {
    "requiredChecks": [
      "k8s-validate",
      "helm-lint",
      "ansible-lint",
      "infra-security",
      "cost-analysis"
    ],
    "qualityThresholds": {
      "provisioningTime": "15m",
      "failoverTime": "5m",
      "uptime": "99.99%",
      "latency": "100ms"
    }
  },
  "security": {
    "enforceNetworkPolicies": true,
    "requireSecureEndpoints": true,
    "enforceRBAC": true,
    "requireEncryption": true,
    "enforceSecurityContexts": true
  },
  "infrastructure": {
    "requireHASetup": true,
    "enforceAutoScaling": true,
    "requireBackups": true,
    "enforceResourceLimits": true,
    "requireMonitoring": true
  },
  "monitoring": {
    "requireMetrics": true,
    "enforceLogging": true,
    "requireAlerts": true,
    "enforceTracing": true,
    "requireDashboards": true
  },
  "reliability": {
    "enforceCircuitBreakers": true,
    "requireRetryPolicies": true,
    "enforceRateLimiting": true,
    "requireFailover": true,
    "enforceSLOs": true
  }
}