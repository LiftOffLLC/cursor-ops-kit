{
  "version": "1.0.0",
  "aiPermissions": {
    "backend": {
      "allowRefactors": true,
      "allowInfraEdits": true,
      "autoSuggestTests": true,
      "enforceLoggingPatterns": true,
      "suggestOptimizations": true,
      "enforceAPIStandards": true
    }
  },
  "robustness": {
    "suggestLoggingEnhancements": true,
    "warnIfNoErrorHandling": true,
    "encourageTelemetry": true,
    "enforceInputValidation": true
  },
  "reviewAssistant": {
    "highlightSecurityRisks": true,
    "reviewEveryAIDiff": true,
    "suggestPerformanceOptimizations": true
  },
  "documentation": {
    "autoGenerateDocstrings": true,
    "generateREADMEs": true,
    "requireAPIDocumentation": true,
    "enforceSwaggerSpec": true,
    "validateEndpoints": true
  },
  "testing": {
    "suggestTests": true,
    "focusOnFunctionalScenarios": true,
    "enforceTestCoverage": true,
    "minCoverage": 85,
    "requireIntegrationTests": true,
    "requireLoadTests": true
  },
  "workflow": {
    "requiredChecks": [
      "lint",
      "test",
      "security",
      "api-docs",
      "db-migrations",
      "api-security"
    ],
    "qualityThresholds": {
      "responseTime": "200ms",
      "errorRate": "0.1%",
      "uptime": "99.9%"
    }
  },
  "linting": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:security/recommended"
    ],
    "rules": {
      "no-console": "error",
      "no-unused-vars": "error",
      "security/detect-possible-timing-attacks": "error",
      "security/detect-eval-with-expression": "error"
    }
  },
  "security": {
    "enforceRateLimiting": true,
    "requireInputValidation": true,
    "enforceAuthN": true,
    "enforceAuthZ": true,
    "requireSecureHeaders": true,
    "preventSQLInjection": true,
    "enforceAuditLogging": true
  },
  "database": {
    "requireMigrations": true,
    "enforceIndexes": true,
    "validateSchemas": true,
    "requireTransactions": true
  }
} 