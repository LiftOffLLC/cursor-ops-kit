      "allowYamlAndPipelineEdits": true,
      "suggestObservabilityEnhancements": true,
      "respectIaCBoundaries": true,
      "suggestSecurityImprovements": true,
      "enforceComplianceStandards": true
    }
  },
  "documentation": {
    "autoGenerateDocstrings": true,
    "generateREADMEs": true,
    "requireArchitectureDiagrams": true,
    "enforceRunbooks": true,
    "requireDeploymentDocs": true
  },
  "testing": {
    "suggestTests": true,
    "requireInfraTests": true,
    "enforceTestCoverage": true,
    "minCoverage": 80,
    "requireLoadTests": true,
    "requireChaosTests": true
