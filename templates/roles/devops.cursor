    "requireMetrics": true,
    "enforceLogging": true,
    "requireAlerts": true,
    "enforceTracing": true,
    "requireDashboards": true
  },
  "compliance": {
    "enforceSOC2": true,
    "requireGDPR": true,
    "enforceHIPAA": true,
    "requirePCI": true
  },
  "reviewAssistant": {
    "highlightSecurityRisks": true,
