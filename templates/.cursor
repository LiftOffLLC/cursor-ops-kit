{
  "version": "1.0.0",
  "rules": [
    {
      "name": "enforceConsistentNaming",
      "type": "naming",
      "pattern": "^[a-z][a-zA-Z0-9]*$",
      "enabled": true,
      "severity": "error"
    },
    {
      "name": "enforceCommentStyle",
      "type": "comment",
      "pattern": "^// [A-Z].*$",
      "enabled": true,
      "severity": "warn"
    },
    {
      "name": "enforceErrorHandling",
      "type": "code",
      "pattern": "try\\s*{[^}]*}\\s*catch",
      "enabled": true,
      "severity": "error"
    },
    {
      "name": "enforceTestCoverage",
      "type": "test",
      "pattern": ".*\\.test\\.(js|ts)$",
      "enabled": true,
      "severity": "warn"
    },
    {
      "name": "enforceLogging",
      "type": "code",
      "pattern": "console\\.(log|info|warn|error)",
      "enabled": true,
      "severity": "warn"
    }
  ],
  "aiIntegration": {
    "autoSuggest": true,
    "trackAllChanges": true,
    "reviewBeforeCommit": true,
    "allowArchitectureSuggestions": true
  },
  "repoType": "hybrid",
  "multiRepoSupport": true,
  "codeStyle": {
    "languageSpecific": {
      "javascript": "prettier",
      "typescript": "prettier",
      "python": "black",
      "go": "gofmt",
      "java": "google-java-format"
    },
    "autoFixOnSave": true,
    "enforceCommitConventions": true,
    "commitMessageStyle": "conventional"
  },
  "excludeFromAIContext": [
    "**/.env",
    "**/.env.*",
    "**/secrets/**",
    "**/config/credentials.yml",
    "**/*key*.json",
    "**/firebase-adminsdk.json"
  ],
  "ignoreFolders": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "out",
    ".turbo",
    ".vercel",
    ".parcel-cache"
  ],
  "aiPermissions": {
    "backend": {
      "allowRefactors": true,
      "allowInfraEdits": true,
      "autoSuggestTests": true,
      "enforceLoggingPatterns": true
    },
    "frontend": {
      "suggestComponentStructure": true,
      "autoSuggestTests": true,
      "enforceErrorBoundaries": true
    },
    "devops": {
      "allowYamlAndPipelineEdits": true,
      "suggestObservabilityEnhancements": true,
      "respectIaCBoundaries": true
    }
  },
  "reviewAssistant": {
    "enableCodeReviewBot": true,
    "reviewEveryAIDiff": true,
    "autoGeneratePRDescriptions": true,
    "suggestMissingTests": true,
    "highlightSecurityRisks": true
  },
  "documentation": {
    "autoGenerateDocstrings": true,
    "generateREADMEs": true,
    "summarizeLargeDiffs": true
  },
  "testing": {
    "suggestTests": true,
    "focusOnFunctionalScenarios": true,
    "respectUserTestingFramework": true
  },
  "robustness": {
    "suggestLoggingEnhancements": true,
    "warnIfNoErrorHandling": true,
    "encourageTelemetry": true
  },
  "auditTrail": {
    "requireDiffExplanation": true,
    "logAllAIContributions": true,
    "preventHiddenEdits": true
  }
}